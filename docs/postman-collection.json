{
    "info": {
      "name": "Complete API Collection",
      "description": "Complete CRUD operations for User, Wallet management and Authentication API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:3000",
        "type": "string"
      },
      {
        "key": "authToken",
        "value": "",
        "type": "string"
      },
      {
        "key": "userId",
        "value": "",
        "type": "string"
      },
      {
        "key": "walletId",
        "value": "",
        "type": "string"
      }
    ],
    "auth": {
      "type": "bearer",
      "bearer": [
        {
          "key": "token",
          "value": "{{authToken}}",
          "type": "string"
        }
      ]
    },
    "item": [
      {
        "name": "Authentication",
        "item": [
          {
            "name": "Sign In",
            "request": {
              "auth": {
                "type": "noauth"
              },
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"securePassword123\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/auth/signin",
                "host": [
                  "{{baseUrl}}"
                ],
                "path": [
                  "api",
                  "auth",
                  "signin"
                ]
              },
              "description": "Sign in with email and password to get JWT token"
            },
            "response": [],
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "if (pm.response.code === 200) {",
                    "    const response = pm.response.json();",
                    "    if (response.data && response.data.token) {",
                    "        pm.collectionVariables.set('authToken', response.data.token);",
                    "        console.log('Auth token saved:', response.data.token);",
                    "    }",
                    "    if (response.data && response.data.user && response.data.user.id) {",
                    "        pm.collectionVariables.set('userId', response.data.user.id);",
                    "        console.log('User ID saved:', response.data.user.id);",
                    "    }",
                    "}"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          },
          {
            "name": "Sign Out",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/api/auth/signout",
                "host": [
                  "{{baseUrl}}"
                ],
                "path": [
                  "api",
                  "auth",
                  "signout"
                ]
              },
              "description": "Sign out the current user (requires authentication)"
            },
            "response": [],
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "if (pm.response.code === 200) {",
                    "    pm.collectionVariables.set('authToken', '');",
                    "    console.log('Auth token cleared');",
                    "}"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          }
        ]
      },
